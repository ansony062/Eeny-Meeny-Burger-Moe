<div class="container">
  <h3>投稿詳細</h3>
  <div class="row">
    <div class="col-8 mx-auto">
      <%= image_tag @post.get_image, size: "500x400", class: "card-img-top", style: "object-fit: cover;" %>
      <table class="table table-borderless">
        <tr>
          <td>商品名（タイトル）</td>
          <td><%= @post.name %></td>
        </tr>

        <tr>
          <td>店舗名</td>
          <td><%= @post.shop_name %></td>
        </tr>

        <tr>
          <td>場所</td>
          <td><%= @post.place %></td>
        </tr>

        <tr>
          <td>オススメ度</td>
          <td><%= render 'public/posts/startic', post: @post %></td>
        </tr>

        <tr>
          <td>感想レビュー</td>
          <td><%= @post.body %></td>
        </tr>

        <tr>
          <td>タグ</td>
          <td>
            <% @post_tags.each do |tag| %>
              <%= link_to tag_path(tag_id: tag.id), class: "text-dark" do %>
                <i class="fa-solid fa-tag"></i><%= tag.name %>
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_post_path(@post), class: "btn btn-primary btn-sm" %></td>
        </tr>
      </table>

      <!--<div>-->
      <!--  <%#= render 'admin/comments/index', post: @post %>-->
      <!--</div>-->
    </div>
  </div>
</div>