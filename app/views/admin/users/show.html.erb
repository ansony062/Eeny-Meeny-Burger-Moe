<div class="container">
  <div class="row">
    <h4><%= @user.full_name %>さんの会員詳細</h4>
    <div class="col-8">
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <td>氏名</td>
          <td><%= @user.full_name %></td>
        </tr>

        <tr>
          <td>氏名（カナ）</td>
          <td><%= @user.full_name_kana %></td>
        </tr>

        <tr>
          <td>ハンドルネーム</td>
          <td><% @user.nickname %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_active %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-secondary">退会</span>
            <% end %>
          </td>
        </tr>

        <tr>
          <td><%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-primary" %></td>
          <td><%#= link_to "投稿一覧を見る", admin_posts_path,class: "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
