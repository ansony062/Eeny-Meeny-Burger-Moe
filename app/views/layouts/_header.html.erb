<header>
    <nav class="navbar navbar-expand-lg">
      <div class="container p-3">
        <!--ロゴ-->
        <%= link_to root_path, class: 'brand-logo' do %>
          <%= image_tag 'logo.png', size:"60x60" %>
        <% end %>

        <!--userログイン時、ようこそ○○さん！-->
        <% if user_signed_in? %>
          <div class="log-in-message">ようこそ、<%= current_user.nickname %>さん！</div>
        <% else %>

        <% end %>



        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"><i class="fa-solid fa-chevron-down"></i></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <!--userログイン時-->
              <li>
                <%= link_to user_path(current_user.id), class: 'nav-link text-dark' do %>
                 <i class="fa-solid fa-user"></i>My page
                <% end %>
              </li>

              <li>
                <%= link_to posts_path, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-camera"></i>Posts
                <% end %>
                </li>

              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-right-from-bracket"></i>Log Out
                <% end %>
              </li>

            <% elsif admin_signed_in? %>
            <!--adminログイン時-->
              <li>
                <%= link_to admin_posts_path, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-camera"></i>Posts
                <% end %>
              </li>

              <li>
                <%= link_to admin_users_path, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-users"></i>Users
                <% end %>
              </li>

              <li>
                <%= link_to admin_tags_path, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-tags"></i>Tags
                <% end %>
              </li>

              <li>
                <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-right-from-bracket"></i>Sign Out
                <% end %>
              </li>

            <% else %>
            <!--未ログイン時-->
              <li>
                <%= link_to posts_path, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-camera"></i>Posts
                <% end %>
              </li>

              <li>
                <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-user-plus"></i>Sign Up
                <% end %>
              </li>

              <li>
                <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-right-to-bracket"></i>Log In
                <% end %>
              </li>

              <li>
                <%= link_to users_guest_sign_in_path, method: :post, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-user-group"></i>Guest Log In
                <% end %>
              </li>

            <% end %>
          </ul>
        </div>

      </div>
    </nav>
</header>