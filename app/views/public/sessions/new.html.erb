<div class="container">
  <h2>ログイン</h2>
  <div class="row">
    <div class="col-6 mx-auto my-3">

      <h7>会員の方はこちらからログインしてください。</h7>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <table class="table table-borderless my-3">

            <tr class="field">
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>

            <tr class="field">
              <td><%= f.label :password, "パスワード" %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>


            <% if devise_mapping.rememberable? %>
              <tr class="field">
                <td></td>
                <td>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </td>
              </tr>

              <tr class="actions">
                <td></td>
                <td><%= f.submit "ログイン", class: "btn btn-primary btn-sm" %></td>
              </tr>
            <% end %>
          </table>
        <% end %>

        <div>
          <%= render "public/shared/links" %>
        </div>

    </div>
  </div>
</div>