<% if post.find_bookmark(current_user) %>
  <%= link_to post_bookmark_path(post.id), method: :delete, remote: true do %>
    <i class="fa-solid fa-bookmark" aria-hidden = "true"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post.id), method: :post, remote: true do %>
    <i class="fa-regular fa-bookmark" aria-hidden = "true"></i>
  <% end %>
<% end %>