<div class="container">
  <div class="row">
    <h3><%= @tag.name %>（全<%= @tag.posts.all.count %>件）</h3>
    <% @tag.posts.each do |post| %>
      <div class="card shadow m-2">
        <div class="card-body">
          <div class="col-8">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_image, size: "250x200", class: "card-img-top", style: "object-fit: cover;" %>
              <h6 class="card-title"><%= post.name %></h6>
              <p class="card-text">
                <i class="fa-solid fa-shop"></i><%= post.shop_name %><br />
                <%= post.body %>
              </p>
              <p><i class="fa-solid fa-comment"></i><%= post.comments.count %></p>
              <span class="text-left">
                <i class= "fa-solid fa-heart" aria-hidden = "true", style = "color: red;"></i><%= post.favorites.count %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="sidebar col-4">
      <h4>
        <%= link_to new_post_path do %>
          <i class="fa-solid fa-circle-plus"></i>NewPost!
        <% end %>
      </h4>
      <%#= render '検索バー' %>
      <%= render 'public/tags/sidetag', tags: @tags %>
    </div>
    </div>
  </div>
</div>