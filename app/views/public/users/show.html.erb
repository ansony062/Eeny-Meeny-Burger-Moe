<div class="container">
  <h3 class="my-3"><%= @user.nickname %>さんの投稿ページ</h3>
  <div class="row">

    <div class="col-5 mx-auto">
      <table class="table">
        <tr class="text-center">
          <th><%= image_tag @user.get_profile_image(200, 200), class: "rounded-circle" %></th>
          <th><%= @user.nickname %></th>
          <th>
            <% if @user == current_user %>
              <%= link_to "登録情報へ", users_mypage_path, class: "btn btn-primary" %>
            <% end %>
          </th>
        </tr>
        <tr class="mx-auto">
          <th>フォロー数：<%= link_to @user.followings.count, user_followings_path(@user) %></th>
          <th>フォロワー数：<%= link_to @user.followers.count, user_followers_path(@user) %></th>
          <% if user_signed_in? %>
            <th><%= render 'public/relationships/btn', user: @user %></th>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <% @user.posts.each do |post| %>
      <div class="card shadow-lg m-2">
        <div class="card-body">
          <div class="col-8">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_image, size: "200x150", class: "card-img-top", style: "object-fit: cover;" %>
              <h6 class="card-title text-dark"><%= post.name %></h6>
              <p class="card-text text-dark">
                <i class="fa-solid fa-shop"></i><%= post.shop_name %>
              </p>
              <p class="text-dark"><i class="fa-solid fa-comment"></i><%= post.comments.count %></p>
              <span class="text-dark">
                <i class= "fa-solid fa-heart" aria-hidden = "true", style = "color: red;"></i><%= post.favorites.count %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
