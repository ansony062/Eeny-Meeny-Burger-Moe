<div class="container">
  <h3><%= @user.full_name %>さんの会員情報編集</h3>
  <div class="row">
    <div class="col-8 mx-auto my-3">
      <%= render 'layouts/errors', obj: @user %>
      <%= form_with model: @user, url: users_mypage_path, method: :patch do |f| %>
        <table class="table table-borderless">

          <tr><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></tr>

          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %>&emsp;<%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <td>氏名（カナ）</td>
            <td><%= f.text_field :last_name_kana %>&emsp;<%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <td>ハンドルネーム</td>
            <td><%= f.text_field :nickname %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-primary btn-sm" %></td>
            <td><%= link_to "退会する", users_confirm_path, class: "btn btn-danger btn-sm" %></td>
          </tr>

        </table>
      <% end %>
    </div>
  </div>
</div>