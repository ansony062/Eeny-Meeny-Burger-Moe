<div class="container">
  <div class="row">
    <h3><%= @user.full_name %>さんの会員情報編集</h3>
    <div class="col-8">
      <%= render 'layouts/errors', obj: @user %>
      <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>
        <table class="table table-borderless">

          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %>&emsp;<%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <td>氏名（カナ）</td>
            <td><%= f.text_field :last_name_kana %>&emsp;<%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <td>ハンドルネーム</td>
            <td><%= f.text_field :nickname %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-primary" %></td>
          </tr>

        </table>
      <% end %>
    </div>
  </div>
</div>