<table class="table mx-auto">
  <thead>
    <tr>
      <th></th>
      <th>ハンドルネーム</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100, 100), class: "rounded-circle" %></td>
        <td><%= user.nickname %></td>
        <% if user_signed_in? %>
          <td><%= render 'public/relationships/btn', user: user, options: {class: "follow-link"} %></td>
        <% end %>
        <td><%= link_to "投稿ページへ", user_path(user), class: "btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>