<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>ハンドルネーム</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: "100x100", class: "rounded-circle" %></td>
        <td><%= user.nickname %></td>
        <td><%= render 'relationships/btn', user: user, options: {class: "follow-link"} %></td>
        <td><%= link_to "投稿ページへ", user_path, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>