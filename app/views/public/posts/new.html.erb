<div class="container">
  <div class="row">
    <h4>新規投稿フォーム</h4>
    <div class="col-8">
      <%= render 'layouts/errors', obj: @post %>
      <%= form_with model: @post, url: posts_path do |f| %>

        <%= f.file_field :image, accept: "image/*" %>

        <table class="table table-borderless">

          <tr>
            <td>画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>

          <tr>
            <td>商品名（タイトル）</td>
            <td><%= f.text_field :name, :placeholder => "〇〇バーガー" %></td>
          </tr>

          <tr>
            <td>店舗名</td>
            <td><%= f.text_field :shop_name, :placeholder => "〇〇バーガーショップ" %></td>
          </tr>

          <tr>
            <td>場所</td>
            <td><%= f.text_field :place, :placeholder => "最寄り駅〇〇駅" %></td>
          </tr>

          <tr>
            <td>オススメ度</td>
            <td></td>
          </tr>

          <tr>
            <td>感想・レビュー</td>
            <td><%= f.text_field :body, :placeholder => "ここに感想・レビューを記入してください。" %></td>
          </tr>

          <tr>
            <td>タグ</td>
            <td></td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit '新規投稿', class: "btn btn-primary" %></td>
          </tr>
        </table>

      <% end %>
    </div>
  </div>
</div>